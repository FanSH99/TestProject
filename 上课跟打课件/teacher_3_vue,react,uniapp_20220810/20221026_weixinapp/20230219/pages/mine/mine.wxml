  <checkbox value="看书">看书</checkbox>
  <checkbox value="游戏">游戏</checkbox>
</checkbox-group>

<picker mode="selector" range="{{range1}}">
请您选择专业
</picker>
<picker range="{{range2}}" range-key="name" value="{{1}}" bindchange="changeSelect">请选择专业:{{name}}</picker>

<picker mode="region" level="sub-district" bindchange="changeCity">
请您选择地址:{{city}}</picker>

