{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		},
	    {
            "path" : "pages/cart/cart",
            "style" :                                                                                    
            {
                // 这里可以配置单页面的样式，比如导航栏必备寄给你颜色文本等
                "navigationBarTitleText": "购物车",
                "navigationBarBackgroundColor": "#ff4d32",
                "navigationBarShadow": "grey",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/mine/mine",
            "style" :                                                                                    
            {
                "navigationBarBackgroundColor": "#ff4d32",
              "navigationBarShadow": "grey",
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/info/info",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
    // 全局配置，设置页面的窗口表现，和微信小程序的一样。
	"globalStyle": {
        // 导航栏字体颜色
		"navigationBarTextStyle": "black",
        // 导航栏字体内容
		"navigationBarTitleText": "uni-app",
        // 导航栏背景颜色
		"navigationBarBackgroundColor": "#F8F8F8",
        // 下拉刷新时显示的窗口背景色
		"backgroundColor": "#F8F8F8",
        // 是否开启下拉刷新
        "enablePullDownRefresh": true
	},
	"uniIdRouter": {},
    "tabBar": {
        "backgroundColor": "",
        // 文本颜色
        "color": "#919191",
        // 选中时文本颜色
        "selectedColor": "#ff4d32",
        "list": [
            {
                // 首页跳转路径
                "pagePath": "pages/index/index",
                // 首页图标颜色
                "iconPath": "./static/home-o.png",
                // 首页选中的图标颜色
                "selectedIconPath": "./static/home.png",
                // 首页显示文本
                "text": "index"
            },
            {
                // 购物车跳转路径
                "pagePath": "pages/cart/cart",
                // 购物车图标颜色
                "iconPath": "./static/cate-o.png",
                // 购物车选中的图标颜色
                "selectedIconPath": "./static/cate.png",
                // 购物车显示文本
                "text": "cart"
                
            }
           
        ]
    }
}
