.search{
    width: 95%;
    margin: 0 auto;
}
.search input {
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 1px solid #535353;
    padding: 0 10rpx;
    border-radius: 10rpx;
    color: #ffcd32;
}
.textcolor{
    color: #ffcd32;
}
.gotsearch{
    font-size: 34rpx;
    padding: 20rpx;
    color: #fff;
}
.tag{
    font-size: 30rpx;
    padding: 10rpx;
    box-sizing: border-box;
    border: 1px solid #ffcd32;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
.tags{
    width: 100%;
    display: flex;
    margin-top: 20rpx;
    flex-wrap: wrap;
}
.song{
    width: 95%;
    margin: 20rpx auto;
}
.songs{
    font-size: 32rpx;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    color: #919191;
    border-bottom: 1px solid #3a3a3a;
}