.btns{
    width: 80%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    padding-bottom: 20rpx;
}
.btn{
    font-size: 65rpx;
}
.playList{
    width: 100%;
    height: 0;
    background-color: rgba(0, 0, 0, 0.7);
    position: absolute;
    bottom: 0;
    overflow: hidden;
}
.title{
    width: 100%;
    text-align: center;
    font-size: 34rpx;
    color: #ffffff;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #747474;
    position: relative;
}
.icon-close{
    font-size: 30rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    margin-top: -15rpx;
}
.show{
    height: 900rpx;
    transition: 0.3s;
}
.hied{
    height: 0;
    transition: 0.3s;
}
.playListScroll{
    height: 800rpx;
}
.song{
    width: 90%;
    margin:  0 auto;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px dotted rgb(70, 70, 70);
    color: #ffffff;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.ar{
    color: #acacac;
}
.active{
    color: #ffcd32;
}
.playing{
    width: 25rpx;
    float: right;
    margin-right: 20rpx;
    margin-top: 35rpx;
}